<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".B_Spares_Managament"
    tools:ignore="Overdraw">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/blue"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/back_btn_nearest_workers"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="0dp"
                                android:background="@color/transparent"
                                android:backgroundTint="@color/transparent"
                                android:gravity="center"
                                app:icon="@drawable/back_btn"
                                app:iconGravity="start"
                                app:iconTint="@color/black">

                            </com.google.android.material.button.MaterialButton>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginLeft="65sp"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:gravity="center"
                                    android:text="Spares Management"
                                    android:textColor="@color/black"
                                    android:textSize="20sp">

                                </TextView>


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:padding="10dp"
                        tools:ignore="UselessParent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/sm_card1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:backgroundTint="#EBF5FF"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/actionBarItemBackground"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="350dp"
                                    android:layout_height="140dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/xc90_side_mhev_my24" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:gravity="left"
                                    android:text="Volvo XC90"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="left"
                                    android:text="SUV"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:padding="10dp"
                        tools:ignore="UselessParent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/sm_card2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:backgroundTint="#EBF5FF"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/actionBarItemBackground"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="350dp"
                                    android:layout_height="140dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/xc60_ice_my24" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:gravity="left"
                                    android:text="Volvo XC60"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="left"
                                    android:text="SUV"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:padding="10dp"
                        tools:ignore="UselessParent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/sm_card3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:backgroundTint="#EBF5FF"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/actionBarItemBackground"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="350dp"
                                    android:layout_height="140dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/xc40_my23_bev" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:gravity="left"
                                    android:text="Volvo XC40"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="left"
                                    android:text="SUV"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:padding="10dp"
                        tools:ignore="UselessParent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/sm_card4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:backgroundTint="#EBF5FF"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/actionBarItemBackground"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="350dp"
                                    android:layout_height="140dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/s90_ice_my24" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:gravity="left"
                                    android:text="Volvo S90"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="left"
                                    android:text="Sedan"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>



        </LinearLayout>

    </ScrollView>


</LinearLayout>