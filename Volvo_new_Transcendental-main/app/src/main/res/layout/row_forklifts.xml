<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="1dp"
    app:circularflow_radiusInDP="10dp"
    app:circularflow_defaultRadius="10dp"
    app:cardUseCompatPadding="true"
    tools:ignore="Overdraw">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:foregroundGravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="13dp"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:elevation="1dp"
            android:padding="10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/vector_circle_green">

                        </ImageView>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/asset_name_main_aa1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fork Lift Name"
                        android:textColor="@color/black"
                        android:layout_marginStart="7dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>


                </LinearLayout>


                <TextView
                    android:id="@+id/ready_main_aa7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="160dp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:text="Ready"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap">

                </TextView>

                <TextView
                    android:id="@+id/under_main_aa8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="47dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Maintaenance"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/red1"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap">

                </TextView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/vector_circle_grey1">

                    </ImageView>


                </LinearLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asset ID: "
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="7dp"

                    android:textAlignment="center"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/asset_id_main_aa2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VBA0001"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="3dp"

                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/vector_circle_grey1">

                    </ImageView>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plant Location: "
                    android:fontFamily="@font/poppins"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"

                    android:textSize="16sp"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/plant_location_main_aa3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banagalore"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="3dp"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/vector_circle_grey1">

                    </ImageView>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date: "
                    android:fontFamily="@font/poppins"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"

                    android:textSize="16sp"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/start_date_main_aa4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/03/2024"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="3dp"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/vector_circle_grey1">

                    </ImageView>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date: "
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:layout_marginStart="7dp"

                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/end_date_main_aa5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="02/03/2024"
                    android:textAlignment="textStart"
                    android:layout_marginStart="3dp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/vector_circle_green">

                    </ImageView>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration: "
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="7dp"

                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/duration_main_aa6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Month"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    android:textSize="16sp"/>


            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>